extends layout

mixin table(version, tests)
	table.table
		thead
			tr
				th(width='40%') Bug
				th(width='15%') Actions
				th
		tbody
			each bug in bugs
				tr
					td
						a(href="/bugs/#{bug.name}")= bug.config.title
					td.text-center
						button(class='btn btn-primary run-test' data-url='/bugs/#{bug.name}/check/#{version}/') Check bug
					td
		tfoot
			tr
				th(colspan='3') Count #{bugs.length}


block content

	h1= team.name
		br
		small= team.id

	br
	h3 Bugs
	+table("PUBLIC", public)

	h3 Test round

	table.table
		tr
			td(width='40%') Run a test round on that team
			td(width='15%').text-center
				button(class='btn btn-primary run-round' data-url='/round/') Run round
			td

	div#roundResponse
